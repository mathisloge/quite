{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 26,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "common",
            "hidden": true,
            "binaryDir": "${sourceDir}/build",
            "generator": "Ninja",
            "installDir": "${sourceDir}/dist",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "VCPKG_OVERLAY_PORTS": "${sourceDir}/cmake/overlays",
                "Python3_FIND_VIRTUALENV": "FIRST",
                "Python3_EXECUTABLE": "${sourceDir}/venv",
                "QUITE_BUILD_STUDIO": "ON",
                "BUILD_SHARED_LIBS": "ON"
            }
        },
        {
            "name": "vcpkg",
            "hidden": true,
            "toolchainFile": "/home/mlogemann/dev/vcpkg/scripts/buildsystems/vcpkg.cmake"
        },
        {
            "name": "use-gcc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "developer",
            "hidden": true,
            "cacheVariables": {
                "BUILD_TESTING": "ON"
            }
        },
        {
            "name": "developer-gcc",
            "displayName": "Developer gcc",
            "inherits": [
                "common",
                "vcpkg",
                "use-gcc",
                "developer"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "developer-gcc-debug",
            "configurePreset": "developer-gcc",
            "configuration": "Debug"
        },
        {
            "name": "developer-gcc-release",
            "configurePreset": "developer-gcc",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "developer-gcc",
            "configurePreset": "developer-gcc"
        }
    ]
}
