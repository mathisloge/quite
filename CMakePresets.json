{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 26,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "common",
            "hidden": true,
            "binaryDir": "${sourceDir}/build",
            "generator": "Ninja",
            "installDir": "${sourceDir}/dist",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "Python3_FIND_VIRTUALENV": "FIRST",
                "Python3_EXECUTABLE": "${sourceDir}/venv",
                "BUILD_SHARED_LIBS": "ON"
            }
        },
        {
            "name": "fetch-dependencies",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": "${sourceDir}/cmake/DependencyProvider.cmake",
                "QUITE_FETCH_DEPENDENCIES": true
            }
        },
        {
            "name": "vcpkg",
            "hidden": true,
            "toolchainFile": "/home/mlogemann/dev/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "VCPKG_OVERLAY_PORTS": "${sourceDir}/cmake/overlays"
            }
        },
        {
            "name": "debug-build",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release-build",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "use-gcc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "developer",
            "hidden": true,
            "cacheVariables": {
                "BUILD_TESTING": "ON"
            }
        },
        {
            "name": "developer-gcc",
            "displayName": "Developer gcc",
            "inherits": [
                "common",
                "vcpkg",
                "use-gcc",
                "debug-build",
                "developer"
            ]
        },
        {
            "name": "python-build",
            "displayName": "Python build",
            "binaryDir": "${sourceDir}/build",
            "generator": "Ninja",
            "installDir": "${sourceDir}/dist",
            "inherits":[
                "common",
                "developer",
                "fetch-dependencies"
            ],
            "cacheVariables": {
                "QUITE_BUILD_PYTHON_PACKAGE": true
            }
        },
        {
            "name": "ci",
            "displayName": "CI configuration",
            "inherits": [
                "common",
                "fetch-dependencies"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "BUILD_TESTING": true,
                "CMAKE_C_COMPILER": "gcc-13",
                "CMAKE_CXX_COMPILER": "g++-13"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "developer-gcc",
            "configurePreset": "developer-gcc"
        },
        {
            "name": "python-build",
            "configurePreset": "python-build"
        },
        {
            "name": "ci",
            "configurePreset": "ci"
        }
    ],
    "testPresets": [
        {
            "name": "developer-gcc",
            "configurePreset": "developer-gcc"
        },
        {
            "name": "ci",
            "configurePreset": "ci",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "ignore",
                "stopOnFailure": true
            }
        }
    ],
    "workflowPresets": [
        {
            "name": "ci",
            "steps": [
                {
                    "type": "configure",
                    "name": "ci"
                },
                {
                    "type": "build",
                    "name": "ci"
                },
                {
                    "type": "test",
                    "name": "ci"
                }
            ]
        }
    ]
}
