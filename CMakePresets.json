{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 26,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "common",
            "hidden": true,
            "binaryDir": "${sourceDir}/build",
            "generator": "Ninja",
            "installDir": "${sourceDir}/dist",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "Python3_FIND_VIRTUALENV": "FIRST",
                "Python3_EXECUTABLE": "${sourceDir}/venv",
                "BUILD_SHARED_LIBS": "ON"
            }
        },
        {
            "name": "vcpkg",
            "hidden": true,
            "toolchainFile": "/home/mlogemann/dev/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "VCPKG_OVERLAY_PORTS": "${sourceDir}/cmake/overlays",
                "CPM_USE_LOCAL_PACKAGES": true
            }
        },
        {
            "name": "debug-build",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release-build",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "developer",
            "displayName": "Developer",
            "inherits": [
                "common",
                "debug-build"
            ],
            "cacheVariables": {
                "BUILD_TESTING": true,
                "QUITE_INSTALL": false
            }
        },
        {
            "name": "developer-vcpkg",
            "displayName": "Developer (vcpkg)",
            "inherits": [
                "common",
                "debug-build",
                "vcpkg"
            ],
            "cacheVariables": {
                "BUILD_TESTING": true,
                "QUITE_INSTALL": true,
                "CMAKE_C_COMPILER": "gcc-13",
                "CMAKE_CXX_COMPILER": "g++-13"
            }
        },
        {
            "name": "python-build",
            "displayName": "Python build",
            "binaryDir": "${sourceDir}/build",
            "generator": "Ninja",
            "installDir": "${sourceDir}/dist",
            "inherits": [
                "common",
                "developer"
            ],
            "cacheVariables": {
                "BUILD_SHARED_LIBS": false,
                "QUITE_BUILD_STUDIO": false,
                "QUITE_BUILD_PROBES": true,
                "QUITE_EXAMPLES": false
            }
        },
        {
            "name": "ci",
            "displayName": "CI configuration",
            "inherits": [
                "common"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "BUILD_TESTING": true,
                "CMAKE_C_COMPILER": "gcc-13",
                "CMAKE_CXX_COMPILER": "g++-13",
                "QUITE_INSTALL": false
            },
            "environment": {
                "WAYLAND_DISPLAY": "wl-test-env"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "developer",
            "configurePreset": "developer"
        },
        {
            "name": "developer (vcpkg)",
            "configurePreset": "developer"
        },
        {
            "name": "python-build",
            "configurePreset": "python-build"
        },
        {
            "name": "ci",
            "configurePreset": "ci"
        }
    ],
    "testPresets": [
        {
            "name": "developer",
            "configurePreset": "developer",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "ignore",
                "stopOnFailure": true
            }
        },
        {
            "name": "developer (vcpkg)",
            "configurePreset": "developer-vcpkg"
        },
        {
            "name": "ci",
            "configurePreset": "ci",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "ignore",
                "stopOnFailure": true
            }
        }
    ],
    "workflowPresets": [
        {
            "name": "ci",
            "steps": [
                {
                    "type": "configure",
                    "name": "ci"
                },
                {
                    "type": "build",
                    "name": "ci"
                },
                {
                    "type": "test",
                    "name": "ci"
                }
            ]
        }
    ]
}
